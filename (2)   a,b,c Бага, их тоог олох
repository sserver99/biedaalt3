                                MIN OF X,Y,Z
#include<stdio.h>
#include<stdlib.h>
int main()
{
   int a,b,c,min;
   scanf("%d %d %d",&a,&b,&c);
   min=a;
   if(min>b)b=min;
   if(min>c)c=min;
   printf("%d",min);
  system("pause");  
 return 0;
}
                                 MAX OF X,Y,Z
#include <stdio.h>
#include <conio.h>
main(){
int a,b,c,max;
printf("a,b,c=");
scanf("%i %i %i",&a,&b,&c);
if(a>b) {if(a>c) max=a;
else max=c;
} else { if(b>c) max=b;
else max=c;
}
printf("max=%i",max);
getch();
return 0;
}
